@page
@model Labs2024_WebPages.Pages.User.IndexModel
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<p>
    <a asp-page="/Users/Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="/Users/Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="/Users/Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="/Users/Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
