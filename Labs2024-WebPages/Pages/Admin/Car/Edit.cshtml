@page "{id:int}"
@model Labs2024_WebPages.Pages.Admin.Car.EditModel

<h2>Edit Car</h2>

<form method="post">
    <input type="hidden" asp-for="Car.ID" />
    <div class="form-group">
        <label asp-for="Car.ID"></label>
        <input asp-for="Car.ID" class="form-control" disabled />
        <span asp-validation-for="Car.ID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Brand"></label>
        <input asp-for="Car.Brand" class="form-control" />
        <span asp-validation-for="Car.Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.Model"></label>
        <input asp-for="Car.Model" class="form-control" />
        <span asp-validation-for="Car.Model" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.YearOfProduction"></label>
        <input asp-for="Car.YearOfProduction" class="form-control" />
        <span asp-validation-for="Car.YearOfProduction" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Car.CarRegistration"></label>
        <input asp-for="Car.CarRegistration" class="form-control" />
        <span asp-validation-for="Car.CarRegistration" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
